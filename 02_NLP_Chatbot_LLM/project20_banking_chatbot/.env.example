# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
# Alternative models: llama3.1:8b, mistral:7b

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
# Alternative: keepitreal/vietnamese-sbert

# Vector Database
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./data/embeddings/chroma_db
VECTOR_DB_COLLECTION=mb_banking_docs

# RAG Configuration
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/banking_chatbot
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DATABASE=banking_chatbot

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log
CONVERSATION_LOG_PATH=logs/conversations/

# Scraper Configuration
MB_WEBSITE_URL=https://www.mbbank.com.vn
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_DELAY=2
SCRAPER_MAX_RETRIES=3

# Evaluation
EVAL_ENABLED=true
EVAL_METRICS=rouge,bert_score,ragas
EVAL_LOG_PATH=logs/evaluation/

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
CACHE_ENABLED=true
CACHE_TTL=3600

# Features
ENABLE_CONVERSATION_HISTORY=true
MAX_CONVERSATION_HISTORY=10
ENABLE_FEEDBACK=true
