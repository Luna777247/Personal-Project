# Face Recognition eKYC Environment Variables

# Application
APP_NAME="Face Recognition eKYC"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
API_KEY_REQUIRED=false
API_KEY="your-api-key-here"

# Model Configuration
MODEL_BACKEND="insightface"  # retinaface, arcface, insightface
USE_GPU=true
GPU_DEVICE=0

# Face Matching Thresholds
SIMILARITY_THRESHOLD=0.6
VERIFICATION_THRESHOLD=0.65
MIN_FACE_CONFIDENCE=0.8

# Liveness Detection
ENABLE_LIVENESS=true
BLINK_DETECTION=true
HEAD_MOVEMENT_DETECTION=true
TEXTURE_ANALYSIS=true

# Quality Checks
ENABLE_QUALITY_CHECK=true
MIN_FACE_SIZE=80
MAX_IMAGE_SIZE=10485760  # 10MB

# Database
DATABASE_ENABLED=false
DATABASE_URL="sqlite:///data/ekyc.db"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/ekyc.log"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CCCD Validation
VALIDATE_CCCD_FORMAT=true
EXTRACT_CCCD_INFO=true

# Storage
DELETE_IMAGES_AFTER=true
RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT=100  # requests per minute

# CORS
ENABLE_CORS=true
ALLOWED_ORIGINS="*"
