# Environment Configuration for OCR Banking

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here

# Model Paths
DETECTION_MODEL_PATH=models/detection/
RECOGNITION_MODEL_PATH=models/recognition/

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
USE_GPU=true

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/ocr_banking

# Storage (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=ap-southeast-1
S3_BUCKET_NAME=ocr-banking-documents

# Azure Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_CONTAINER_NAME=documents

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ocr_banking.log

# Security
MAX_UPLOAD_SIZE=10485760
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Performance
MAX_WORKERS=4
BATCH_SIZE=8
TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
