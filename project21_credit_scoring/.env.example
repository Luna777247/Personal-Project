# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Model Configuration
MODEL_TYPE=xgboost  # xgboost or lightgbm
MODEL_PATH=models/credit_scoring_model.pkl
SCALER_PATH=models/scaler.pkl
FEATURE_NAMES_PATH=models/feature_names.pkl

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/credit_scoring

# Thresholds
DEFAULT_THRESHOLD=0.5
HIGH_RISK_THRESHOLD=0.7
LOW_RISK_THRESHOLD=0.3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/credit_scoring.log

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# Feature Engineering
ENABLE_ADVANCED_FEATURES=true

# SHAP Configuration
SHAP_SAMPLE_SIZE=100
ENABLE_SHAP_CACHING=true

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
