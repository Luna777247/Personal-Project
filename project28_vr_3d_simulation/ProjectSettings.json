  "interactionSystems": {
    "handTracking": {
      "supported": true,
      "platforms": [
        "Meta Quest 3",
        "HTC Vive (with controllers)",
        "WebXR compatible devices"
      ],
      "gestures": [
        "Pinch",
        "Point",
        "Grab",
        "Thumbs Up",
        "Peace Sign"
      ]
    },
    "gazeInteraction": {
      "supported": true,
      "platforms": [
        "All VR platforms",
        "Eye-tracking optional"
      ],
      "features": [
        "Dwell-based selection",
        "Gaze-based UI navigation",
        "Accessibility mode (no hands required)"
      ]
    },
    "locomotion": {
      "modes": [
        "Teleport (comfortable for all users)",
        "Smooth movement (optional)",
        "Climbing mechanic (multi-level spaces)"
      ]
    }
  },
  "dataIntegration": {
    "realTimeData": [
      {
        "name": "Weather",
        "source": "NOAA API",
        "updateFrequency": "1/hour",
        "fields": [
          "temperature",
          "humidity",
          "windSpeed",
          "rainfallRate"
        ]
      },
      {
        "name": "Flood Forecast",
        "source": "Global Flood Monitor (UNOSAT)",
        "updateFrequency": "6/day",
        "fields": [
          "floodProbability",
          "floodSeverity",
          "affectedAreas"
        ]
      },
      {
        "name": "Climate Data",
        "source": "Copernicus Climate Data",
        "updateFrequency": "1/month",
        "fields": [
          "temperatureAnomaly",
          "precipitation",
          "co2Levels"
        ]
      }
    ],
    "staticData": [
      "Satellite imagery (basemaps)",
      "Building footprints (vulnerability)",
      "Land use classification",
      "Species distribution maps"
    ]
  },
  "educationalMetrics": {
