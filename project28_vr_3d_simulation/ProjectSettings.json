{
  "projectName": "Project 28 - VR/3D Simulation for Education and Environment",
  "version": "1.0.0",
  "description": "Immersive VR experiences for environmental education using waste management, flood risk, and ecosystem simulations",
  "author": "AI Assistant",
  "targetPlatforms": [
    "Meta Quest 3",
    "HTC Vive",
    "PlayStation VR2",
    "WebXR (Browser)",
    "Android Cardboard VR",
    "iOS Cardboard VR"
  ],
  "unitySettings": {
    "unityVersion": "2022.3 LTS",
    "scriptingBackend": "IL2CPP",
    "apiCompatibilityLevel": ".NET Framework",
    "targetFramerate": {
      "quest": 72,
      "pcVR": 90,
      "webXR": 60,
      "mobileVR": 60
    }
  },
  "scenarios": {
    "WasteManagement": {
      "name": "Waste Processing Facility",
      "description": "Interactive waste sorting and recycling education",
      "features": [
        "Trash sorting mechanics",
        "Conveyor belt interaction",
        "Contamination detection",
        "Performance metrics",
        "Educational feedback"
      ],
      "estimatedPlaytime": "15-20 minutes",
      "educationalGrade": "6-12",
      "learningObjectives": [
        "Understand waste hierarchy",
        "Identify recyclable materials",
        "Appreciate circular economy"
      ]
    },
    "FloodRisk": {
      "name": "Flood Risk Simulation",
      "description": "Real-time flood dynamics and disaster preparedness",
      "features": [
        "Real-time water physics (SPH)",
        "Multi-scenario rainfall",
        "Building vulnerability assessment",
        "Evacuation planning",
        "Climate scenarios (1-yr, 10-yr, 100-yr, 2050, 2100)"
      ],
      "estimatedPlaytime": "20-25 minutes",
      "educationalGrade": "8-12",
      "learningObjectives": [
        "Recognize flood hazards",
        "Understand risk assessment",
        "Plan emergency response",
        "See climate change impacts"
      ],
      "researchAlignment": "RIVERS Project"
    },
    "ForestEcosystem": {
      "name": "Forest Ecosystem Simulation",
      "description": "Biodiversity and ecosystem dynamics learning",
      "features": [
        "Species population simulation",
        "Food web interactions",
        "Lifecycle visualization",
        "Environmental stressors",
        "Carbon cycle visualization"
      ],
      "estimatedPlaytime": "20-30 minutes",
      "educationalGrade": "6-12",
      "learningObjectives": [
        "Recognize biodiversity importance",
        "Understand food chains",
        "See climate change impacts",
        "Learn ecosystem services"
      ],
      "researchAlignment": "SIMPLE Project"
    }
  },
  "technologyStack": {
    "gameEngine": [
      "Unity 3D 2022 LTS"
    ],
    "3DModeling": [
      "Blender 4.0+",
      "Substance Painter (optional)",
      "Mixamo (free animations)"
    ],
    "webVR": [
      "Three.js or Babylon.js",
      "WebXR Device API",
      "Node.js/Express"
    ],
    "programming": [
      "C# (Unity scripts)",
      "JavaScript/TypeScript (WebXR)",
      "Python (data processing)"
    ],
    "physics": [
      "PhysX (Unity built-in)",
      "SPH (Smoothed Particle Hydrodynamics)",
      "Obi Rope (cloth simulation - optional)"
    ],
    "audio": [
      "Wwise (professional)",
      "FMOD (alternative)",
      "Unity Audio (built-in)"
    ],
    "dataIntegration": [
      "NOAA Weather API",
      "Copernicus Climate Data",
      "GDAL (geospatial)",
      "Geopandas (spatial analysis)"
    ]
  },
  "fileStructure": {
    "scenes": {
      "WasteManagement": [
        "WasteProcessing.unity",
        "SortingLine.unity",
        "RecyclingPlant.unity"
