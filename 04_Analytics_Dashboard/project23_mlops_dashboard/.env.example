# Application
APP_NAME=AI Ops Dashboard
APP_VERSION=1.0.0
ENVIRONMENT=development

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow:mlflow@postgres:5432/mlflow
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts
# For local development, use: file:///app/mlartifacts

# AWS S3 (for artifact storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=ap-southeast-1
S3_BUCKET=mlflow-artifacts

# PostgreSQL Database
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_DB=mlflow
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Triton Inference Server
TRITON_HTTP_URL=http://triton:8000
TRITON_GRPC_URL=grpc://triton:8001
TRITON_METRICS_URL=http://triton:8002/metrics
TRITON_MODEL_REPOSITORY=/models

# Prometheus
PROMETHEUS_URL=http://prometheus:9090
PROMETHEUS_RETENTION_TIME=15d

# Grafana
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ALLOW_SIGN_UP=false

# Dashboard (Streamlit)
DASHBOARD_PORT=8501
DASHBOARD_TITLE=AI Ops Dashboard
DASHBOARD_LAYOUT=wide

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_TIMEOUT=30
API_MAX_REQUEST_SIZE=10485760  # 10MB

# Model Serving
DEFAULT_MODEL_NAME=fraud_detector
DEFAULT_MODEL_VERSION=1
MODEL_TIMEOUT=5000  # milliseconds
BATCH_SIZE=32
MAX_BATCH_DELAY=100  # microseconds

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Training
TRAINING_DATA_PATH=/data/training
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1
RANDOM_SEED=42

# Model Registry
AUTO_REGISTER_MODELS=true
MODEL_STAGE_TRANSITIONS=true
REQUIRE_APPROVAL=false  # Set true for production

# CI/CD
GITHUB_TOKEN=your-github-token
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password

# Alerts
ENABLE_ALERTS=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your-pagerduty-key
ALERT_EMAIL=alerts@example.com

# Security
JWT_SECRET_KEY=your-super-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # seconds
API_KEY_REQUIRED=false

# Feature Flags
ENABLE_MODEL_DRIFT_DETECTION=true
ENABLE_DATA_VALIDATION=true
ENABLE_BIAS_DETECTION=true
ENABLE_EXPLAINABILITY=true

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_PROFILING=false

# GPU Configuration (for Triton)
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
TRITON_GPU_MEMORY_FRACTION=0.8
